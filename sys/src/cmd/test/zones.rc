#!/bin/rc

rfork en

msg=()
for(f in /adm/timezone/*){
	if(! ~ $f /adm/timezone/README){
		cat $f >/env/timezone
		x=`{../$O.date -n}
		tm=`{../$O.date -f'WW, DD MMM YYYY hh:mm:ss Z' $x}
		y=`{../$O.seconds $"tm}
		if(! ~ $x $y){
			echo $f $tm $x $y are not equal
			msg=($msg $f)
		}
	}
}

exit $"msg
